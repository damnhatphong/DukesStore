@model ProductCreationalViewModel

@{
    ViewData["Title"] = "Edit " + @Model.GetType().GetProperty("Product").Name;
}

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-center mb-4">
            <h1 class="h3 mb-0 text-gray-800"><strong>EDIT PRODUCT: @Model.Product.ProductName.ToUpper()</strong></h1>

        </div>
        <div class="d-sm-flex align-items-center justify-content-center mb-4">
            <h3>
                <strong>Please click Save to modify product</strong>
            </h3>
        </div>
        

        <div class="row  justify-content-center">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Product.ProductId" />
                    <input type="hidden" asp-for="Product.PriceId" />
                    <input type="hidden" asp-for="Price.PriceId" />
                    <div class="form-group">
                        <label asp-for="Product.ProductName" class="control-label"></label>
                        <input asp-for="Product.ProductName" class="form-control" />
                        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.BrandId" class="control-label"></label>
                        <select asp-for="Product.BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                        <span asp-validation-for="Product.BrandId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.CategoryId" class="control-label"></label>
                        <select asp-for="Product.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.ModelYear" class="control-label"></label>
                        <input asp-for="Product.ModelYear" class="form-control" />
                        <span asp-validation-for="Product.ModelYear" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price.Amount" class="control-label"></label>
                        <input asp-for="Price.Amount" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Price.Currency.CurrencyUnit" class="control-label"></label>
                        <select asp-for="Price.CurrencyId" class="form-control" asp-items="ViewBag.Currencies"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Description" class="control-label"></label>
                        <textarea asp-for="Product.Description" class="form-control" style="resize:none"></textarea>
                    </div>
                    <div class="form-group offset-9">
                        <a asp-action="Index" class="btn btn-light btn-icon-split">
                            <span class="icon text-gray-600">
                                <i class="fas fa-arrow-left"></i>
                            </span>
                            <span class="text">Back to List</span>
                        </a>
                        <button type="submit" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-flag"></i>
                            </span>
                            <span class="text">Save</span>
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
